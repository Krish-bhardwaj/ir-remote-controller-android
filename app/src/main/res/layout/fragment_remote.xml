<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.RemoteFragment">

    <Spinner
        android:id="@+id/spinnerTVs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:id="@+id/powerTV"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="53dp"
        android:src="@drawable/ic_power_settings_new_black_24dp" />

    <ImageButton
        android:id="@+id/menuTV"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="157dp"
        android:layout_toEndOf="@+id/powerTV"
        android:src="@drawable/ic_menu_black_24dp" />

    <ImageButton
        android:id="@+id/backTV"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/menuTV"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="35dp"
        android:src="@drawable/ic_chevron_left_black_24dp" />

    <ImageButton
        android:id="@+id/channelUpTV"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/powerTV"
        android:layout_alignParentTop="true"
        android:layout_marginTop="188dp"
        android:src="@drawable/ic_expand_less_black_24dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/powerTV"
        android:layout_centerVertical="true"
        android:text="Channel"
        android:textAlignment="center" />

    <ImageButton
        android:id="@+id/channelDownTV"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/powerTV"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="190dp"
        android:src="@drawable/ic_expand_more_black_24dp" />

    <ImageButton
        android:id="@+id/volumeUpTV"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/backTV"
        android:layout_alignTop="@+id/channelUpTV"
        android:src="@drawable/ic_add_black_24dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/backTV"
        android:layout_alignTop="@+id/textView2"
        android:text="Volume"
        android:textAlignment="center" />

    <ImageButton
        android:id="@+id/volumeDownTV"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/backTV"
        android:layout_alignTop="@+id/channelDownTV"
        android:src="@drawable/ic_remove_black_24dp" />

    <ImageButton
        android:id="@+id/muteTV"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/backTV"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/ic_volume_mute_black_24dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/backTV"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="31dp"
        android:text="Mute"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/powerTV"
        android:layout_alignParentTop="true"
        android:layout_marginTop="131dp"
        android:text="On/Off"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/menuTV"
        android:layout_alignBottom="@+id/textView"
        android:text="Menu"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/backTV"
        android:layout_alignBottom="@+id/textView"
        android:text="Back"
        android:textAlignment="center" />

</RelativeLayout>